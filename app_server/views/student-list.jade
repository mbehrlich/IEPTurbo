extends layout

block content
  #banner.page-header
    .row
      .col-xs-12.col-lg-6
        h1= pageHeader.title
          br
          small &nbsp;#{pageHeader.strapline}
  .row(ng-app='iepTurboApp')
    .col-xs-12.col-sm-8(ng-controller="studentListCtrl")
      label(for="filter") Filter results
      input#filter(type="text", name="filter", ng-model="textFilter")
      .error {{ message }}
      table.table.table-bordered.table-hover
        thead
          tr
            th Last name
            th First name
            th Grade
        tbody(ng-repeat="student in data.students | filter : textFilter")
            tr
              td
                a(href="/students/{{ student._id }}") {{ student.lastName }}
              td
                a(href="/students/{{ student._id }}") {{ student.firstName }}
              td
                a(href="/students/{{ student._id }}") {{ student.grade }}
    .col-xs-12.col-sm-4
      a.btn.btn-default(href='/students/new') Add Student
      p.lead Add a student, assign a test, and have students log in and complete. Then you're done!
